html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/style.css")
        title Formulario
    body
        div(id='formBody') 
            form(action="/api/productos", method="post" id="formProduct")
                ul
                    li
                        label(for="title") Title:
                        input(type="text" maxlength="20" placeholder="Ingrese el nombre del producto" id='title' name='title') 
                    li
                        label(for="price") Price: 
                        input(type="number" placeholder="Ingrese el precio del producto" id='price' name='price') 
                    li 
                        label(for="url") Url del producto: 
                        input(placeholder="ingrese la URL de la imagen del producto" type="text" id="url" name="thumbnail")
                    button(type="submit") Enviar Datos
        include tablas
        include chat
    script(src="/socket.io/socket.io.js") 
    script(src="/js/index.js") 